App {
    window_title: "Input Types Test"
    layout: "column"
    
    // Text input
    Input {
        type: "text"
        placeholder: "Enter text"
        id: "text_input"
    }
    
    // Checkbox input
    Input {
        type: "checkbox"
        checked: true
        text: "Accept terms"
        id: "checkbox_input"
    }
    
    // Range input
    Input {
        type: "range"
        min: 0
        max: 100
        step: 1
        value: 50
        id: "range_input"
    }
    
    // Email input
    Input {
        type: "email"
        placeholder: "Enter email"
        id: "email_input"
    }
}